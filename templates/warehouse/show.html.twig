{% extends 'base.html.twig' %}

{% block title %}Warehouse{% endblock %}

{% block body %}
    <h1>Warehouse</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ warehouse.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ warehouse.name }}</td>
            </tr>
            <tr>
                <th>Users</th>
                <td>{% for user in warehouse.users %}
                    {{ user.username }}
                    {% else %}
                        No users assigned.
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_warehouse_index') }}">back to list</a>

    <a href="{{ path('app_warehouse_edit', {'id': warehouse.id}) }}">edit</a>

    {{ include('warehouse/_delete_form.html.twig') }}
{% endblock %}
